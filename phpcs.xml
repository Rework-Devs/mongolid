<?xml version="1.0"?>
<ruleset name="Mongolid">
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="45"/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>

     <!-- Ignore warnings and show progress of the run -->
    <arg value="nps"/>

     <!-- Folders that will be tracked -->
    <file>src</file>
    <file>tests</file>

    <rule ref="LeroyMerlin"/>

    <!-- Excluded patterns in some folders -->
    <rule ref="PSR1.Classes.ClassDeclaration.MultipleClasses">
        <exclude-pattern>tests/Unit/Query/ModelAssemblerTest.php</exclude-pattern>
        <exclude-pattern>tests/Unit/Model/HasRelationsTraitTest.php</exclude-pattern>
    </rule>
    <!-- Multiple classes confuses this sniff -->
    <rule ref="Squiz.Classes.ClassFileName.NoMatch">
        <exclude-pattern>tests/Unit/Query/ModelAssemblerTest.php</exclude-pattern>
        <exclude-pattern>tests/Unit/Model/HasRelationsTraitTest.php</exclude-pattern>
    </rule>
</ruleset>
